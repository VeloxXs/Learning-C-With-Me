int kitapfiyati, siparismiktari;
float indirimorani,indirimsizfiyat, indirimlifiyat, sum;
 kitapfiyati = 20;
 siparismiktari = 0;
 printf("Kac tane kitap almak istediginizi giriniz:");
 scanf("%d",&siparismiktari);

 if(siparismiktari>=60){
    indirimorani=0.30;
 }
 else{
    if(siparismiktari>=30 && siparismiktari<60){
        indirimorani=0.20;
    }
    else if(siparismiktari>10 && siparismiktari<30){
        indirimorani=0.10;
    }
    else{
        indirimorani=0.01;
    }
 }

 indirimsizfiyat=kitapfiyati*siparismiktari;
 printf("Indirimsiz kitaplarin toplam fiyati: %f\n",indirimsizfiyat);
 indirimlifiyat=kitapfiyati*indirimorani*siparismiktari;
 printf("Indirimli kitaplarin toplam fiyati: %f\n",indirimlifiyat);
 sum=indirimsizfiyat-indirimlifiyat;
 printf("Toplam Tutar: %f",sum);








}
