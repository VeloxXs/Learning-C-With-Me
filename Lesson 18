//Buyuk kucuk harf ayrmimi yapabilen uygulama.

#include <stdio.h>
#include <stdlib.h>

int main()
{

   char myChar;
   printf("Enter a character:");
   scanf("%c",&myChar);


   if((myChar >= 'A') && (myChar <='Z')){
    printf("%c is an uppercase letter \n", myChar);
   }else if(( myChar >= 'a') && (myChar<='z')){
   printf("%c is an lowercase letter \n", myChar);
   }
   else{
    printf("Bu girmis oldugunuz deger (%c) bir harf degildir ", myChar);
   }



    return 0;
}
