//Kaptaki gazin basincini hesaplayan bir uygulama yaptim :)

#include <stdio.h>
#include <stdlib.h>

int main()
{
    float pressure, constantR;
    int numberOfMoles, volume, heat;
    constantR=0.82;
    printf("Kabin hacmini giriniz:");
    scanf("%d", &volume);
    printf("Kabdaki mol sayisini giriniz:");
    scanf("%d", &numberOfMoles);
    printf("ortam sicakligini giriniz:");
    scanf("%d", &heat);


    pressure = (numberOfMoles * constantR * heat) / volume ;
    printf("%dV hacimli kaptaki gazin basinci: %fP\n\n\n",volume, pressure);

    return 0;
}
